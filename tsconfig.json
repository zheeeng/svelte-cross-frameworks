{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM"],
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
